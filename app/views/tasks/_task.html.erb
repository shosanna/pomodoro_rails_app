<li class="task">
  <span class="task-text">
    <% if task.done %>
      <strike><%= task.content %></strike>
    <% else %>
      <%= task.content %>
    <% end %>
  </span>
  <%= link_to "done", task_path(task, done: !task.done), method: :put, class: "option done_action", remote: true %>
  <%= link_to "delete", task, method: :delete, class: "option delete_action", data: { confirm: "Are you sure?" }, remote: true %>
</li>
